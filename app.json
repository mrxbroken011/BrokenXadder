{
  "name": "BrokenXadder",
  "description": "Example Telegram bot deployed on Heroku",
  "repository": "https://github.com/mrxbroken011/Brokenxadder",  
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of the bot owner",
      "required": true
    }
  },
  "addons": [
    "python3"  
  ],
  "buildpacks": [
     {
       "url": "https://github.com/heroku/heroku-buildpack-python"
     },
     {
       "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
     }
     ],
  "scripts": {
    "postdeploy": "python setup.py"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "environments": {
    "production": {
      "BOT_TOKEN": {
        "required": true
      },
      "OWNER_ID": {
        "required": true
      }
    }
  }
}
